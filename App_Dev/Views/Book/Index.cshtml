@model IEnumerable<Book>
@{
    ViewData["Title"] = "Index";
}

<h1>Index Book</h1>
<div>
    <a asp-controller="Book" asp-action="Create">
        Create New Book
    </a>
</div>

<table>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                    @obj.Author
                    @obj.Image
                    @obj.Price
                    @obj.Description
                    @obj.Category
                </td>
                <td>
                    <div role="group">
                        <a asp-controller="Book" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
                        <a asp-controller="Book" asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

