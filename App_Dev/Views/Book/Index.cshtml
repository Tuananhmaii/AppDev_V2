@model IEnumerable<Book>
<div class="book-index-wrapper">
    <h2><a asp-controller="Home" asp-action="Index">FPT Store |</a><span style="padding-left: 5px; font-size: 21px;">Book</span></h2>
    <div class="prop-title-wrapper">
        <h6 class="table-prop-title">Name</h6>
        <h6 class="table-prop-title">Author</h6>
        <h6 class="table-prop-title">Category</h6>
        <h6 class="table-prop-title">Price</h6>
    </div>
    <div class="book-table-wrapper">
        @foreach (var obj in Model)
        {
            <div class="table-item">
                <div class="table-image" style="background-image: url('../../@obj.Image.Replace("\\","/")')"></div>
                <h6 class="table-name-prop">@obj.Name</h6>
                <h6>@obj.Author</h6>
                <h6>@obj.Category.Name</h6>
                <h6 id="table-price-prop">$@obj.Price</h6>
                <div role="group" class="table-func-btn">
                    <a class="table-edit-btn" asp-controller="Book" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                    <a class="table-delete-btn" asp-controller="Book" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash3"></i> Delete</a>
                </div>
            </div>
        }
        <a class="add-sth-btn table-item add-sth-wrapper" asp-controller="Book" asp-action="Create">
            <i class="bi bi-journal-plus"></i>
        </a>
    </div>
</div>

