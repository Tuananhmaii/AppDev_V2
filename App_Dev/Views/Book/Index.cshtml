@model IEnumerable<Book>

<h1>Index Book</h1>
<div>
    <a asp-controller="Book" asp-action="Create">
        Create New Book
    </a>
</div>
<div class="book-table-wrapper">
    @foreach (var obj in Model)
    {
        <div class="table-item">
            <div class="table-image" style="background-image: url('../../@obj.Image.Replace("\\","/")')"></div>
            <h6 class="table-name-prop">@obj.Name</h6>
            <h6>@obj.Author</h6>
            <h6>@obj.Category.Name</h6>
            <h6 class="table-price-prop">@obj.Price</h6>
            <div role="group" class="table-func-btn">
                <a class="table-edit-btn" asp-controller="Book" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
                <a class="table-delete-btn" asp-controller="Book" asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
            </div>
        </div>
    }
</div>
