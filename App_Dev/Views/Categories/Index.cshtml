@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="book-index-wrapper">
    <h2><a asp-controller="Home" asp-action="Index">FPT Store |</a><span style="padding-left: 5px; font-size: 21px;">Category</span></h2>
    <div class="prop-title-wrapper">
        <h6 style="margin-left: 21px" class="table-prop-title">Name</h6>
    </div>
    <div class="book-table-wrapper">
        @foreach (var obj in Model)
        {
            <div style="justify-content: space-between; width: 832.59px" class="table-item">
                <h6 class="table-name-prop">@obj.Name</h6>
                <div role="group" class="table-func-btn">
                    <a class="table-edit-btn" asp-controller="Categories" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                    <a class="table-delete-btn" asp-controller="Categories" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash3"></i> Delete</a>
                </div>
            </div>
        }
        <a class="add-sth-btn table-item add-sth-wrapper" asp-controller="Categories" asp-action="Create">
            <i class="bi bi-folder-plus"></i>
        </a>
    </div>
</div>

