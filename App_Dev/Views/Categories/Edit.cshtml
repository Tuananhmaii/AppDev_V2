@model Category

<form method="post" asp-action="Edit">
    <div>
        <h1>Edit Category</h1>
    </div>
    <div>
        <label asp-for="Name">Name of Category</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <button type="submit">Update</button>
    <a asp-controller="Categories" asp-action="Index">Back to List</a>
</form>